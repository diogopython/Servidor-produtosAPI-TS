{
  "compilerOptions": {
    "module": "commonjs", 
    "target": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "jsx": "react-jsx",

    "outDir": "./dist",   // saída dos arquivos compilados
    "rootDir": "./src"       // raiz do código fonte
  },
  "include": [
    "src", "src/mail.ts", "Tests/Produtos-CLI-Web",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "Tests"
  ]
}